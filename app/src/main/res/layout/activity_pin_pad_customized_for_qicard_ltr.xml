<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBAC6CE"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.sm.sdk.demo.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0E152C" />

    <LinearLayout
        android:id="@+id/custom_btn_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="@dimen/itemSize"
            android:elevation="8dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/colorOrange"
            app:cornerRadius="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_pin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemSize"
            android:gravity="center"
            android:hint="Enter PIN"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_k0"
                    style="@style/key_board_text"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_k1"
                    style="@style/key_board_text"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="2" />

                <TextView
                    android:id="@+id/tv_k2"
                    style="@style/key_board_text"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/qicard_keyboard_divider"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_k3"
                    style="@style/key_board_text"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="4" />

                <TextView
                    android:id="@+id/tv_k4"
                    style="@style/key_board_text"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="5" />

                <TextView
                    android:id="@+id/tv_k5"
                    style="@style/key_board_text"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/qicard_keyboard_divider"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_k6"
                    style="@style/key_board_text"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="7" />

                <TextView
                    android:id="@+id/tv_k7"
                    style="@style/key_board_text"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="8" />

                <TextView
                    android:id="@+id/tv_k8"
                    style="@style/key_board_text"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/qicard_keyboard_divider"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_del" />

                <TextView
                    android:id="@+id/tv_k9"
                    style="@style/key_board_text"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:background="@drawable/btn_bg_pin_key"
                    android:text="0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/qicard_keyboard_divider"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/qicard_keyboard_divider"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:text="@string/pin_pad_text_confirm"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:backgroundTint="#FF6A22CF"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>